<div class="form-group">
    <label for="contain">Catégories</label>
    <div class="panel panel-default" id="categories">
        <div class="panel-body">
            <div class="row">
                <% categories.forEach(function (categorie) { %>
                <div class="col-md-6">
                    <div class="checkbox abc-checkbox">
                        <input type="checkbox" id="cat-checkbox<%= categorie.id_categorie %>">
                        <label for="cat-checkbox<%= categorie.id_categorie %>">
                            <%= categorie.nom_categorie %>
                        </label>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>
<div class="form-group">
    <label for="contain">Ingrédients</label>
    <div class="panel panel-default" id="ingredients">
        <div class="panel-body">
            <div class="row">
                <% ingredients.forEach(function (ingredient) { %>
                <div class="col-md-6">
                    <div class="checkbox abc-checkbox">
                        <input type="checkbox" id="ing-checkbox<%= ingredient.id_ingredient %>">
                        <label for="ing-checkbox<%= ingredient.id_ingredient %>">
                            <%= ingredient.nom_ingredient %>
                        </label>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>
<div class="form-group">
    <label for="contain">Nombre de personnes</label>
    <div class="input-group">
                    <span class="input-group-btn">
                    <button type="button" class="btn btn-default btn-number"
                            disabled="disabled" data-type="minus" data-field="quant[1]">
                    <span class="glyphicon glyphicon-minus"></span>
                    </button>
                    </span>
        <input id="input-nb-pers" type="text" name="quant[1]" class="form-control input-number" value="1" min="1"
               max="20">
        <span class="input-group-btn">
                    <button type="button" class="btn btn-default btn-number" data-type="plus"
                            data-field="quant[1]">
                    <span class="glyphicon glyphicon-plus"></span>
                    </button>
                    </span>
    </div>
</div>


<div class="form-group">
    <label for="timepicker1"> Temps de préparation</label>
    <div class="input-group bootstrap-timepicker timepicker">
        <input id="timepicker1" type="text" class="form-control input-small">
        <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
    </div>
</div>

<div class="form-group">
    <label for="timepicker2"> Temps de cuisson</label>
    <div class="input-group bootstrap-timepicker timepicker">
        <input id="timepicker2" type="text" class="form-control input-small">
        <span class="input-group-addon"><i class="glyphicon glyphicon-time"></i></span>
    </div>
</div>


<label for="comment"> Texte de la préparation </label>
<textarea id="text-recette" name="text-recette" class="form-control " rows="3" style="width:100%"></textarea>